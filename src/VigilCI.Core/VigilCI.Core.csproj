<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <PackageId>VigilCI.Core</PackageId>
        <Version>1.0.0</Version>
        <AssemblyVersion>1.0.0.0</AssemblyVersion>
        <FileVersion>1.0.0.0</FileVersion>
        <Authors>Dan</Authors>
        <Description>Core library for VigilCI â€” continuous performance test tracking</Description>
        <PackageTags>performance;testing;benchmarking;ci</PackageTags>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/dansmith-dev/VigilCI</RepositoryUrl>
        <PackageProjectUrl>https://github.com/dansmith-dev/VigilCI</PackageProjectUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="xunit.v3.extensibility.core" Version="3.2.2" />
        <PackageReference Include="xunit.v3.runner.common" Version="3.2.2" />
    </ItemGroup>

    <ItemGroup>
        <None Include="buildTransitive\VigilCI.Core.targets" Pack="true" PackagePath="buildTransitive\" />
        <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
